<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="25dp"
    android:backgroundTint="#BC2222"
    tools:context=".Startpage">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutDiet"
        android:layout_width="371dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/anyDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alles"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="1dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/vegetarianDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetarisch"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="20dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/veganDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegan"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="1dp" />
    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:text="Must Haves:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutDiet" />

    <CheckBox
        android:id="@+id/checkBoxAntioxidantien"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:text="Antioxidantien"
        app:layout_constraintStart_toEndOf="@+id/checkBoxMagnesium"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSelen" />

    <CheckBox
        android:id="@+id/checkBoxMagnesium"
        android:layout_width="123dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:text="Magnesium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxEisen" />

    <CheckBox
        android:id="@+id/checkBoxEisen"
        android:layout_width="67dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Eisen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:id="@+id/checkBoxSelen"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="36dp"
        android:text="Selen"
        app:layout_constraintStart_toEndOf="@+id/checkBoxEisen"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutDiet" />

    <CheckBox
        android:id="@+id/checkBoxKalium"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:text="Kalium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxMagnesium" />

    <CheckBox
        android:id="@+id/checkBoxOmega3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="116dp"
        android:text="Omega-3"
        app:layout_constraintStart_toEndOf="@+id/checkBoxKalium"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxAntioxidantien" />

    <CheckBox
        android:id="@+id/checkBoxCalcium"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:text="Calcium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxKalium" />

    <CheckBox
        android:id="@+id/checkBoxNatrium"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="108dp"
        android:text="Natrium"
        app:layout_constraintStart_toEndOf="@+id/checkBoxCalcium"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxOmega3" />

    <CheckBox
        android:id="@+id/checkBoxGluten"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Gluten"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="No-gos:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCalcium" />

    <CheckBox
        android:id="@+id/checkBoxSellerie"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="1dp"
        android:text="Sellerie"
        app:layout_constraintStart_toEndOf="@+id/checkBoxFruktose"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxNuesse" />

    <CheckBox
        android:id="@+id/checkBoxFruktose"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:text="Fruktose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxGluten" />

    <CheckBox
        android:id="@+id/checkBoxSoja"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:text="Sojabohnen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxFruktose" />

    <CheckBox
        android:id="@+id/checkBoxSchalenfruechte"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="84dp"
        android:text="Schalenfrüchte"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSoja"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSellerie" />

    <CheckBox
        android:id="@+id/checkBoxEier"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="108dp"
        android:text="Eier"
        app:layout_constraintStart_toEndOf="@+id/checkBoxLaktose"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSchalenfruechte" />

    <CheckBox
        android:id="@+id/checkBoxLaktose"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:text="Laktose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSoja" />

    <CheckBox
        android:id="@+id/checkBoxNuesse"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:text="Nüsse"
        app:layout_constraintStart_toEndOf="@+id/checkBoxGluten"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxNatrium" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="20dp"
        android:onClick="onSearch"
        android:text="Suchen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxEier" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:text="Wusstest du schon, dass..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="322dp"
        android:layout_height="76dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="17dp"
        android:text="In Frankreich pro Jahr schätzungsweise \n500 000 000 Weinbergschnecken verspeißt werden?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <FrameLayout
        android:layout_width="382dp"
        android:layout_height="191dp"
        android:layout_marginTop="4dp"
        android:onClick="goToRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

        <include
            android:id="@+id/recipeOfTheDay"
            layout="@layout/activity_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:inputType="textPersonName"
        android:text="Rezept des Tages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/custom_lightbulb_foreground"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>